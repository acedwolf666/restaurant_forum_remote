<% if user != current_user %>
  <% if current_user.followed?(user)%>
    <%= link_to 'Unfollow', followship_path(user), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to 'Follow', followships_path(followed_id: user), method: :post, class: "btn btn-danger" %>
  <% end %>
<% end %>
